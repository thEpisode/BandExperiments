        <Grid Grid.ColumnSpan="3" Height="187" VerticalAlignment="Top" Background="Black" Margin="0,-102,0,0"/>

        <Button x:Name="ConnectButton" Content="Start reading" HorizontalAlignment="Center" Margin="9.584,55.333,10.583,0" VerticalAlignment="Top" Click="Connect_Click" BorderBrush="#FF063765" Foreground="#FF063765" Height="58" Width="205" Grid.Row="1" Grid.Column="1"/>
